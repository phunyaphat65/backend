        "express",
        "prisma",
        "typescript",
        "api"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^6.0.0",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.7",
