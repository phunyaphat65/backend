        "dotenv": "^16.4.5",
        "express": "^4.21.2",
        "jsonwebtoken": "^9.0.2",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.10.2",
        "prisma": "^6.0.0",
