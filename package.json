{
    "name": "job-matching-backend",
    "version": "1.0.0",
    "description": "Express backend for job matching platform",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
